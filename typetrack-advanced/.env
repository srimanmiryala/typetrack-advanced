# Create the environment file
cat > .env << 'EOF'
# Application Settings
SECRET_KEY=dev-secret-key-change-in-production
FLASK_ENV=development

# Database Configuration
DATABASE_URL=sqlite:///typetrack.db
POSTGRES_DB=typetrack
